
<div class="container-fluid">

<h3>
{{#if retry}}
<span style="color: red" class="col-sm-10">{{msg}}
{{else}}
<span class="col-sm-10">Registration form:
{{/if}}
<a class="glyph pull-right" href="/"><span class="glyphicon glyphicon-remove"</span></a></span>
</h3>

</br>
</br>

{{#if regAllowed}}

{{#if admin}}
<h3 style="color: red">(This will register the admin user)</h3>
{{/if}}

<form class="form-horizontal" role="form"
        action="/processreg" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" autofocus
                id="fieldName" name="name">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldCompay" class="col-sm-2 control-label">Institution</label>
        <div class="col-sm-8">
            <input type="text" class="form-control"
                id="fieldCompany" name="company">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
            <input type="email" class="form-control" required
                id="fieldEmail" name="email">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldPW" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" required
            id="fieldPW" name="password">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldSMS" class="col-sm-2 control-label">SMS Gateway Email</label>
        <div class="col-sm-8">
            <input type="email" class="form-control"
                id="fieldSMS" name="sms">
        </div>
    </div>

{{#if admin}}
    <div class="form-group">
    <label class="col-sm-2 control-label">Other users</label>
    <div class="radio col-sm-8">
        <label>
        <input type="radio" name="regType" value="selfreg" checked="checked">self-register
        </label>
    </div>
    <div class="radio col-sm-offset-2 col-sm-8">
        <label>
        <input type="radio" name="regType" value="adminapprove">self-register with admin approval
        </label>
    </div>
    <div class="radio col-sm-offset-2 col-sm-8">
        <label>
        <input type="radio" name="regType" value="adminreg">registered by admin
        </label>
    </div>
    </div>

    <div class="form-group">
        <label for="fieldTimeout" class="col-sm-2 control-label">Browser session idle timeout (hours)</label>
        <div class="col-sm-2">
            <input type="number" class="form-control"
                id="fieldTimeout" name="timeout" value="12">
        </div>
    </div>
{{/if}}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
        </div>
    </div>
</form>

{{/if}} <!-- regAllowed -->

</div> <!-- /container -->
